<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — moja aplikacja platformy ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href='@Url.Action("Index", "Home")'>
                    <img style="height:52px" src='@Url.Content("~/Images/logo.png")' />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Informations", "About", "Home")</li>
                    @if (Context.User.IsInRole("ADMIN"))
                    {
                        <li>@Html.ActionLink("Bank accounts", "Index", "BankAccounts")</li>
                        <li>@Html.ActionLink("Credit cards", "Index", "CreditCards")</li>
                        <li>@Html.ActionLink("Transactions", "Index", "Transactions")</li>
                        <li>@Html.ActionLink("Investments", "Index", "Investments")</li>
                        <li>@Html.ActionLink("Credits", "Index", "Credits")</li>
                    }
                    @if (Context.User.Identity.IsAuthenticated && !Context.User.IsInRole("ADMIN"))
                    {
                        <li>@Html.ActionLink("Transactions", "Index", "Transactions")</li>
                        <li>@Html.ActionLink("My bank accounts", "MyList", "BankAccounts")</li>
                        <li>@Html.ActionLink("Investments", "Index", "Investments")</li>
                        <li>@Html.ActionLink("Credits", "My", "Credits")</li>
                        <li>@Html.ActionLink("Profile", "My", "Profiles")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="margin-bottom: 30px">
        @RenderBody()
    </div>
    <div style="position:fixed; bottom: 0; width:100%; padding-bottom: 20px">
        <hr />
        <div class="text-center">
            Virtual bank. Grzegorz Piłat ⓒ 2019 Programowanie zaawansowane
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
