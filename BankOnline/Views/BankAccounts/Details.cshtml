@model BankOnline.Models.BankAccount

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>BankAccount</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Image name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreditCard.Image)
        </dd>

        <dt>
            User name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Profile.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Number)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.Balance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Balance)
        </dd>


        <dt>
            Credit card
        </dt>
        <dd>
            <img src="~/Images/@Model.CreditCard.Image" width="325px" height="204px" />
        </dd>
    </dl>
</div>
<hr />
<h2>Outgoing transfers</h2>
<table class="table">
    <tr>
        <th>Destinated bank account</th>
        <th>Balance</th>
        <th>Date</th>
    </tr>
    @foreach (var outTr in ViewBag.OutTransfers)
    {
        <tr>
            <th>@outTr.To.Number</th>
            <th>@outTr.Amount zł</th>
            <th>@outTr.TransactionDate</th>
        </tr>
    }
</table>

<hr />
<h2>Incoming transfers</h2>
<table class="table">
    <tr>
        <th>Source bank account</th>
        <th>Balance</th>
        <th>Date</th>
    </tr>
    @foreach (var inTr in ViewBag.InTransfers)
    {
        <tr>
            <th>@inTr.From.Number</th>
            <th>@inTr.Amount zł </th>
            <th>@inTr.TransactionDate</th>
        </tr>
    }
</table>
