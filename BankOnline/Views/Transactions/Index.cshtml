@model IEnumerable<BankOnline.Models.Transaction>

@{
    ViewBag.Title = "Index";
}

<h2>List of transactions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.From.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.To.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransactionDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        @if (Context.User.IsInRole("ADMIN"))
        {

            <th></th>
        }
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.From.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.To.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransactionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        @if (Context.User.IsInRole("ADMIN"))
        {

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        }
    </tr>
}

</table>
